[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "y-align": "end",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.05,
        "ratio-margin-bottom": 0.04,
        "ratio-spacing": 0.015,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box", "header"]
    },
    {
        "id": "header",
        "type": "PisakLabel",
        "style-class": "PisakViewerAlbumHeader",
        "x-expand": true,
        "margin-right": 100,
        "x-align": "end"
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.05,
        "children": ["slideshow_widget", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakScanningGroup",
        "children": ["button_menu_box"],
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy"
        }
    },
    {
        "id": "button_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_library","button_album", "button_favourite", 
		     "button_edition", "button_next", "button_previous", 
		     "button_slide"]
    },
    {
        "id": "button_slide",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "POKAZ SLAJDÓW",
	    "scanning-pauser": true,
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "auto",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/slideshow_toggle",
                "object": "slideshow_widget"
            }
        ]
    },
    {
        "id": "button_previous",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "POPRZEDNIE",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "previous",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/previous_slide",
                "object": "slideshow_widget"
            }
        ]
    },
    {
        "id": "button_next",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "NASTĘPNE",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "next",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/next_slide",
                "object": "slideshow_widget"
            }
        ]
    },
    {
        "id": "button_edition",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "EDYCJA",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "edycja"
    },
    {
        "id": "button_favourite",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "ULUBIONE",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "ulubione",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/add_or_remove_from_favs",
                "object": "slideshow_widget"
            }
        ]
    },
    {
        "id": "button_album",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "ALBUM",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "album"
    },
    {
        "id": "button_library",
        "type": "PisakButton",
        "style-class": "PisakViewerButton",
        "text": "BIBLIOTEKA",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "bib"
    },
    {
        "id": "button_slideshow_exit",
        "type": "PisakButton",
        "text": " ",
        "ratio-width": 0.08,
        "ratio-height": 0.08,
        "x": 0,
        "y": 0,
        "icon-name": "usun",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/slideshow_toggle",
                "object": "slideshow_widget"
            }
        ]
    },
    {
        "id": "slideshow_widget",
        "type": "PisakViewerSlideShow",
        "transition-duration": 1000,
        "idle-duration": 1000,
        "slideshow-on-fullscreen": true,
        "data-source": "photo_data_source",
        "ratio-width": 0.71,
        "ratio-height": 0.75,
        "exit_button": "button_slideshow_exit"
    },
    {
        "id": "photo_data_source",
        "type": "PisakViewerPhotoSlidesSource",
        "item-ratio-width": 0.71,
        "item-ratio-height": 0.75
    },
    {
        "id": "progress_bar",
        "type": "PisakProgressBar",
        "style-class": "PisakViewerProgressBar",
        "label": {"type": "PisakLabel"},
        "followed-object": "slideshow_widget",
        "ratio-width": 1,
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "label-ratio-x-offset": 0.85
    }
]	
