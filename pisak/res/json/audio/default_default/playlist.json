[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "background-color": "rgba(0, 0, 0, 1)",
        "rgba": "1, 1, 1, 0.3",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "center",
        "y-align": "end",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-bottom": 0.02,
        "ratio-spacing": 0.025,
        "orientation": "vertical",
        "children": ["progress_bar_bin", "middle_box_group"]
    },
    {
        "id": "header",
        "type": "PisakLabel",
        "style-class": "PisakAudioHeader"
    },
    {
        "id": "middle_box_group",
        "type": "PisakScanningGroup",
        "children": ["middle_box"],
        "strategy": {
            "type": "PisakArbitraryOrderStrategy",
            "subgroup-order": "main_menu, playlist_menu"
        }
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.05,
        "children": ["playlist_box", "main_menu"]
    },
    {
        "id": "main_menu",
        "type": "PisakScanningGroup",
	"sound": "funkcje",
        "strategy": {
            "id": "menu_menu_strategy",
            "type": "PisakRowStrategy",
            "unwind-to": "middle_box_group"
        },
        "children": ["main_menu_box"]
    },
    {
        "id": "main_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_exit", "button_return", "button_favs",
                     "button_louder", "button_quieter",
                     "button_previous_playlist", "button_next_playlist",
                     "button_player", "menu_header"]
    },
    {
        "id": "menu_header",
        "type": "PisakMenuHeader",
        "name": "funkcjenapis",
        "height": 55.28
    },
    {
        "id": "button_exit",
        "text": "PANEL STARTOWY",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "exit",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/stop",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "button_return",
        "text": "POWRÓT",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "back",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/stop",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "button_mark",
        "text": "OCENA",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "disabled": true,
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "ocena"
    },
    {
        "id": "button_favs",
        "text": "ULUBIONE",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "ulubione",
        "signals": [
            {
                "name": "clicked",
                "handler": "audio/add_or_remove_from_favs",
                "object": "audio_playback"
            }
        ]
    },
    {
        "id": "button_louder",
        "text": "GłOŚNIEJ",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "louder",
        "signals": [
            {
                "name": "clicked",
                "handler": "media/increase_volume",
                "object": "audio_playback"
            }
        ]
    },
    {
        "id": "button_quieter",
        "text": "CISZEJ",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "quieter",
        "signals": [
            {
                "name": "clicked",
                "handler": "media/decrease_volume",
                "object": "audio_playback"
            }
        ]
    },
    {
        "id": "button_previous_playlist",
        "text": "POPRZEDNIA\nPLAYLISTA",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "previous",
        "signals": [
            {
                "name": "clicked",
                "handler": "data_source/previous_data_set",
                "object": "data_source"
            },
            {
                "name": "clicked",
                "handler": "general/untoggle",
                "object": "playlist_button_play"
            }
        ]
    },
    {
        "id": "button_next_playlist",
        "text": "NASTĘPNA\nPLAYLISTA",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "next",
        "signals": [
            {
                "name": "clicked",
                "handler": "data_source/next_data_set",
                "object": "data_source"
            },
            {
                "name": "clicked",
                "handler": "general/untoggle",
                "object": "playlist_button_play"
            }
        ]
        
    },
    {
        "id": "button_player",
        "text": "ODTWARZACZ",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.090,
        "icon-size": 50,
        "icon-name": "odtwarzacz",
        "disabled_when": "scanning_off",
        "signals": [
            {
                "name": "clicked",
                "handler": "scanning/set_pending_group",
                "object": "playlist_menu"
            }
        ]
    },
    {
        "id": "playlist_box",
        "type": "PisakFrame",
        "style-class": "PisakAudioPlaylist",
        "children": ["playlist_box_container"]
    },
    {
        "id": "playlist_box_container",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.015,
        "children": ["playlist_menu", "playlist", "visuals"]
    },
    {
        "id": "visuals",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.01,
        "children": ["cover_bin", "info_display"]
    },
    {
        "id": "info_display",
        "type": "PisakLabel",
        "style-class": "PisakAudioPlaylistInfo"
    },
    {
        "id": "cover_bin",
        "type": "PisakBinLayout",
        "ratio-width": 0.31,
        "ratio-height": 0.4,
        "children": ["cover"]
    },
    {
        "id": "cover",
        "type": "MxImage",
        "scale-mode": "fit"
    },
    {
        "id": "playlist",
        "type": "PisakPlaylist",
        "y-align": "start",
        "data-source": "data_source",
        "info-display": "info_display",
        "ratio-width": 0.31,
        "ratio-height": 0.75,
        "playback": "audio_playback",
        "visual": "cover"
    },
    {
        "id": "data_source",
        "type": "PisakAudioPlaylistSource",
        "item-ratio-width": 0.31,
        "item-ratio-height": 0.06
    },
    {
        "id": "audio_playback",
        "type": "PisakAudioPlayback",
        "signals": [
            {
                "name": "started-playing",
                "handler": "general/toggle",
                "object": "playlist_button_play"
            }
        ]
    },
    {
        "id": "playlist_menu",
        "type": "PisakScanningGroup",
        "children": ["playlist_menu_box"],
	"sound": "odtwarzacz",
        "strategy": {
            "type": "PisakRowStrategy",
            "unwind-to": "middle_box_group"
        }
    },
    {
        "id": "playlist_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-expand": true,
        "y-align": "end",
        "children": ["playlist_button_main", "playlist_button_random",
                     "playlist_button_looped", "playlist_button_next",
                     "playlist_button_previous", "playlist_button_stop",
                     "playlist_button_play", "audio_header"]
    },
    {
        "id": "audio_header",
        "type": "PisakMenuHeader",
        "name": "odtwarzacznapis",
        "height": 40.28
    },
    {
        "id": "playlist_button_main",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "main",
        "disabled_when": "scanning_off",
        "signals": [
            {
                "name": "clicked",
                "handler": "scanning/set_pending_group",
                "object": "main_menu"
            }
        ]
    },
    {
        "id": "playlist_button_random",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "random",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/toggle_random_order",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "playlist_button_looped",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "looped",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/toggle_looped",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "playlist_button_next",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "next_track",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/next",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "playlist_button_previous",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "previous_track",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/previous",
                "object": "playlist"
            }
        ]
    },
    {
        "id": "playlist_button_stop",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "ratio-width": 0.06,
        "ratio-height": 0.095,
        "icon-size": 50,
        "icon-name": "stop",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/stop",
                "object": "playlist"
            },
            {
                "name": "clicked",
                "handler": "general/untoggle",
                "object": "playlist_button_play"
            }
        ]
    },
    {
        "id": "playlist_button_play",
        "type": "PisakButton",
        "style-class": "PisakAudioButton",
        "label": " ",
        "icon-size": 50,
        "ratio-width": 0.06,
        "ratio-height": 0.095,
	    "toggled-icon-name": "pauza",
        "icon-size": 50,
        "icon-name": "play",
        "signals": [
            {
                "name": "clicked",
                "handler": "playlist/toggle_play",
                "object": "playlist"
            },
            {
                "name": "clicked",
                "handler": "general/toggle_toggle"
            }
        ]
    },
    {
        "id": "progress_bar_bin",
        "type": "PisakBinLayout",
        "ratio-width": 1,
        "children": ["clock", "progress_bar"]
    },
    {
        "id": "progress_bar",
        "type": "PisakProgressBar",
        "style-class": "PisakAudioProgressBar",
        "ratio-width": 1,
        "followed-object": "audio_playback",
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "label-ratio-x-offset": 0.85
    },
    {
        "id": "clock",
        "type": "PisakClock",
        "x-expand": true,
        "y-expand": true,
        "margin-right": 10,
        "y-align": "end",
        "x-align": "end",
        "measured-proccess": "audio_playback"
    }
]
