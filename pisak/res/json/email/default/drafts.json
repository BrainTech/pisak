[
    {
        "id": "main",
        "type": "PisakBinLayout",
		"x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "center",
        "y-align": "end",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.01,
        "ratio-margin-bottom": 0.02,
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box_group", "header_box"]
    },
    {
	"id": "header_box",
	"type": "PisakBoxLayout",
	"x-expand": true,
	"children": ["header", "date_container"]
    },
    {
        "id": "header",
        "type": "MxLabel",
        "style-class": "PisakEmailHeader",
		"text": "SZKICE",
		"x-expand": true,
        "margin-right": 100,
        "x-align": "end"
    },
    {
        "id": "date_container",
        "type": "PisakBinLayout",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "children": ["date_frame"]
    },
    {
        "id": "date_frame",
        "type": "PisakFrame",
        "style-class": "PisakEmailDate",
        "children": ["date"]
    },
    {
        "id": "date",
        "type": "PisakDate",
        "style-class": "PisakEmailDate"
    },
    {
        "id": "middle_box_group",
        "type": "PisakScanningGroup",
        "children": ["middle_box"],
        "scanning-hilite": true,
        "strategy": {
            "type": "PisakRowStrategy",
            "max-cycle-count": -1
        }
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.05,
        "children": ["pager", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakScanningGroup",
        "children": ["button_menu_box"],
        "scanning-hilite": true,
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy"
        }
    },
    {
        "id": "button_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_exit", "button_back", "button_scan_page",
                     "button_previous_page", "button_next_page",
                     "button_automatic", "button_new_message"]
    },
    {
        "id": "button_exit",
        "label": "PANEL STARTOWY",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "exit"
    },
    {
        "id": "button_new_message",
        "label": "NOWA WIADOMOŚĆ",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "edytuj_opis"
    },
    {
        "id": "button_back",
        "label": "EKRAN GŁÓWNY",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "back"
    },
    {
        "id": "button_scan_page",
        "label": "WYBIERZ WIADOMOŚĆ",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "movie_folder",
        "disabled_when": "scanning_off",
        "signals": [
            {
                "name": "clicked",
                "handler": "pager/scan_page",
                "object": "pager"
            }
        ]
    },
    {
        "id": "button_previous_page",
        "label": "POPRZEDNIA STRONA",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "previous",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/previous_page",
                           "object": "pager"
                       }
                    ]
    },
    {
        "id": "button_next_page",
        "label": "NASTĘPNA STRONA",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "next",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/next_page",
                           "object": "pager"
                       }
                    ]
    },
    {
        "id": "button_automatic",
        "label": "AUTOMAT",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
	"scanning-pauser": true,
        "icon-size": 50,
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "auto",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/toggle_automatic",
                           "object": "pager"
                       }
                    ]
    },
    {
        "id": "pager",
        "type": "PisakPagerWidget",
        "transition-duration": 1000,
        "idle-duration": 3000,
        "page-ratio-spacing": 0.015,
        "ratio-height": 0.75,
        "ratio-width": 0.71,
        "y-align": "start",
        "x-align": "center",
        "rows": 3,
        "columns": 3,
        "page-strategy": {
            "type": "PisakRowStrategy",
            "unwind-to": "button_menu"
        },
        "data-source": "data_source"
    },
    {
        "id": "data_source",
        "type": "PisakEmailDraftsTileSource",
        "item-ratio-spacing": 0.01,
        "item-preview-ratio-width": 0.95,
        "item-preview-ratio-height": 0.65
    },
    {
        "id": "progress_bar",
        "type": "PisakProgressBar",
        "style-class": "PisakEmailProgressBar",
        "ratio-width": 1,
        "followed-object": "pager",
        "label": {
            "type": "MxLabel"
        },
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "label-ratio-x-offset": 0.85
    }
]
