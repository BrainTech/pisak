[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "pattern": "gradient",
        "rgba": "94, 188, 188, 255",
        "background-color": "rgba(188, 236, 236, 255)",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "y-align": "center",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.01,
        "ratio-margin-bottom": 0.04,
        "ratio-spacing": 0.02,
        "orientation": "horizontal",
        "children": ["middle_box", "menu_group"]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
	    "orientation": "vertical",
        "ratio-width": 0.7,
        "ratio-spacing": 0.2,
        "children": ["contact_address_box", "contact_name_box"]
    },
	 {
		"id": "contact_address_box",
		"type": "PisakBoxLayout",
	    "orientation": "vertical",
		"ratio-spacing": 0.05,
		"children": ["contact_address_text", "contact_address_label"]
	},
	{
        "id": "contact_address_label",
        "type": "PisakLabel",
        "style-class": "PisakEmailContact",
        "x-align": "center",
		"line-wrap": true,
		"text": "ADRES EMAIL:"
    },
	{
        "id": "contact_address_text",
        "type": "PisakLabel",
        "style-class": "PisakEmailContact",
        "x-align": "center",
		"line-wrap": true
    },
    {
		"id": "contact_name_box",
		"type": "PisakBoxLayout",
	    "orientation": "vertical",
		"ratio-spacing": 0.05,
		"children": ["contact_name_text", "contact_name_label"]
	},
	{
        "id": "contact_name_label",
        "type": "PisakLabel",
        "style-class": "PisakEmailContact",
        "x-align": "center",
		"line-wrap": true,
		"text": "IMIĘ I NAZWISKO:"
    },
	{
        "id": "contact_name_text",
        "type": "PisakLabel",
        "style-class": "PisakEmailContact",
        "x-align": "center",
		"line-wrap": true
    },
    {
        "id": "menu_group",
        "type": "PisakScanningGroup",
        "children": ["menu_box"],
        "scanning-hilite": true,
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy"
        }
    },
    {
        "id": "menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-align": "center",
        "children": ["button_exit", "button_back", "button_edit_address",
		     "photo_widget", "button_edit_name", "button_edit_photo", "button_create_message"]
    },
	{
        "id": "button_create_message",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "WYŚLIJ WIADOMOŚĆ",
        "ratio-width": 0.24,
        "ratio-height": 0.09,
        "icon-size": 50,
        "icon-name": "wyslij"
    },
    {
        "id": "button_exit",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.24,
        "ratio-height": 0.09,
        "icon-size": 50,
        "icon-name": "exit"
    },
    {
        "id": "button_back",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "EKRAN GŁÓWNY",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "back"
    },
    {
	    "id": "photo_widget",
	    "type": "PisakBinLayout",
	    "ratio-width": 0.24,
        "ratio-height": 0.3,
	    "children": ["photo"]
    },
    {
	    "id": "photo",
	    "type": "MxImage"
    },
    {
        "id": "button_edit_address",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "EDYTUJ ADRES",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "house"
    },
    {
        "id": "button_edit_name",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "EDYTUJ IMIĘ",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "edytuj_opis"
    },
    {
        "id": "button_edit_photo",
        "type": "PisakButton",
        "style-class": "PisakEmailButton",
        "label": "EDYTUJ ZDJĘCIE",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "edytuj_zdjecie"
    }
]